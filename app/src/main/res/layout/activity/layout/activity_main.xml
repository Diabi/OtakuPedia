<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.feng.otakuspedia.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1">

    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/secondary_text"
        app:layout_constraintBottom_toTopOf="@+id/main_tab_bar"/>

    <com.jpeng.jptabbar.JPTabBar
        android:id="@+id/main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:TabAnimate="Jump"
        app:TabTextSize="12sp"
        app:TabNormalColor="@color/secondary_text"
        app:TabSelectColor="@color/third_text"
        android:background="@android:color/white">
    </com.jpeng.jptabbar.JPTabBar>

</android.support.constraint.ConstraintLayout>
